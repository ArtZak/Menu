<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    app:layout_constraintTop_toTopOf="parent"
    android:text="Add new dish"
    android:textSize="40sp"
    android:textColor="@color/white"
    android:background="@color/purple_700"
    android:padding="16dp"/>

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/restaurant_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="@id/name"
        android:text="Restaurant Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/restaurant_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_label"
        app:layout_constraintStart_toStartOf="@id/restaurant_name_label"
        app:layout_constraintEnd_toEndOf="@id/name"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/review_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name"
        app:layout_constraintStart_toStartOf="@id/restaurant_name"
        android:text="Review"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/review_label"
        app:layout_constraintStart_toStartOf="@id/review_label"
        app:layout_constraintEnd_toEndOf="@id/name"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/selection_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/review"
        app:layout_constraintStart_toStartOf="@id/review"
        android:text="Selection"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/selection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selection_label"
        app:layout_constraintStart_toStartOf="@id/selection_label"
        app:layout_constraintEnd_toEndOf="@id/name"
        android:layout_marginVertical="16dp"/>

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/selection"
        app:layout_constraintStart_toStartOf="@id/selection"
        android:layout_marginVertical="16dp"
        android:text="Submit"
        android:padding="8dp"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>